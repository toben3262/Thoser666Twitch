<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="thoser666">
        <preConditions>
            <not>
                <tableExists tableName="t666t_user"/>
            </not>
        </preConditions>
        <createTable tableName="t666t_user">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="surename" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="forename" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="thoser666">
        <addColumn tableName="t666t_user">
            <column name="password" type="varchar(50)"/>
        </addColumn>
    </changeSet>
    <changeSet id="3" author="thoser666">
        <addDefaultValue tableName="t666t_user" columnName="password" defaultValue="admin"/>
    </changeSet>
    <changeSet id="4" author="thoser666">
        <addColumn tableName="t666t_user">
            <column name="loginname" type="varchar(50)">
                    <constraints nullable="false" unique="true"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="5" author="thoser666">
        <addDefaultValue tableName="t666t_user" columnName="loginname" defaultValue="admin"/>
    </changeSet>

</databaseChangeLog>

